# =============================================================================
# STELLAR-ETHEREUM BRIDGE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/stellar_bridge_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stellar_bridge_db
DB_USER=user
DB_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION (for caching & real-time features)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_CHAIN_ID=11155111
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here

# Stellar
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015
STELLAR_MASTER_SECRET_KEY=your_stellar_secret_key_here
STELLAR_MASTER_PUBLIC_KEY=your_stellar_public_key_here

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# 1inch API (REQUIRED - Get from https://portal.1inch.dev/)
ONEINCH_API_KEY=your_1inch_api_key_here
ONEINCH_BASE_URL=https://api.1inch.dev

# Infura (REQUIRED - Get from https://infura.io/)
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_project_secret

# =============================================================================
# SMART CONTRACT ADDRESSES (Will be populated after deployment)
# =============================================================================
ETHEREUM_HTLC_CONTRACT_ADDRESS=
BRIDGE_CONTROLLER_CONTRACT_ADDRESS=
MOCK_USDC_CONTRACT_ADDRESS=
MOCK_WETH_CONTRACT_ADDRESS=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRE=24h
ENCRYPTION_KEY=your_32_character_encryption_key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (Optional - for error tracking)
SENTRY_DSN=https://your_sentry_dsn_here

# Log Level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# =============================================================================
# GAME CONFIGURATION
# =============================================================================
INITIAL_USER_XP=0
INITIAL_USER_LEVEL=1
XP_PER_LEVEL=1000
MAX_LEVEL=100

# Achievement rewards (in XP)
FIRST_SWAP_XP=100
SPEED_DEMON_XP=200
WHALE_HUNTER_XP=500
ARBITRAGE_MASTER_XP=300

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REAL_MONEY_SWAPS=false
ENABLE_MAINNET=false
ENABLE_GAME_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKETS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to seed database with fake data
SEED_DATABASE=false

# Set to true to automatically deploy contracts on startup
AUTO_DEPLOY_CONTRACTS=false

# API response delays (for testing - in milliseconds)
ARTIFICIAL_DELAY=0 